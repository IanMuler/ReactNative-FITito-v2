# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration
DATABASE_URL=postgresql://fitito_user:fitito_password@localhost:5432/fitito_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fitito_dev
DB_USER=fitito_user
DB_PASSWORD=fitito_password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=2000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# CORS Configuration
CORS_ORIGIN=http://localhost:8081
CORS_CREDENTIALS=true