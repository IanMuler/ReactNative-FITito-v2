# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration (for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/fitito_db
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=fitito_db
# DB_USER=username
# DB_PASSWORD=password

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# CORS Configuration
CORS_ORIGIN=http://localhost:8081
CORS_CREDENTIALS=true